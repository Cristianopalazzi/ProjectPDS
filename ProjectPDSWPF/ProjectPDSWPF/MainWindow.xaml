<Window x:Class="ProjectPDSWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectPDSWPF"
        mc:Ignorable="d"
        Name="MyWindow"
        Title="PDSProject" Height="350" Width="Auto" SizeToContent="Width">
    <Grid>
        <TabControl Name="tabControl" Width="Auto" x:FieldModifier="public">
            <TabItem Header="File in ricezione">
                <ListView Name="Persone" ItemsSource="{Binding People}">

                    <!--<ListView.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="Delete" Click="Menu_delete_click"/>
                            <MenuItem Header="Modify" Click="Menu_modify_click"/>
                        </ContextMenu>
                    </ListView.ContextMenu>-->

                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Sender">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Margin="5">
                                            <Ellipse Height="54" Width="54">
                                                <Ellipse.Fill>
                                                    <ImageBrush ImageSource="C:\Users\Cristiano\Desktop\placeholder.png"/>
                                                </Ellipse.Fill>
                                            </Ellipse>
                                            <!--Serve per fare in modo che la colonna si adatti al contenuto-->
                                            <TextBlock Text="{Binding Name}" TextAlignment="Center" FontSize="16"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                            <GridViewColumn Header="File">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <!--Serve per fare in modo che la colonna si adatti al contenuto-->
                                        <TextBlock Text="{Binding Surname}" TextAlignment="Left" FontSize="16"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>


                            <GridViewColumn Width="240"  Header="Progress">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <ProgressBar Value="{Binding Prog.Value}"/>
                                            <TextBlock Text="{Binding Path = Prog.Value, StringFormat={}{0:0}%}"  HorizontalAlignment="Center" VerticalAlignment="Center" />
                                        </Grid>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                            <GridViewColumn Width="140"  Header="Cancel">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="Cancel" Height="20" Width="100" Click="Cancel_Click"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>


                            <GridViewColumn Width="150"  Header="Buttons">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Image Source="{Binding Pic}" Width="32" Height="32"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                        </GridView>
                    </ListView.View>



                    <ListView.GroupStyle>
                        <GroupStyle>
                            <GroupStyle.HeaderTemplate>
                                <DataTemplate>
                                    <TextBlock FontWeight="Bold" FontSize="14" Text="{Binding Name}"/>
                                </DataTemplate>
                            </GroupStyle.HeaderTemplate>
                        </GroupStyle>
                    </ListView.GroupStyle>



                </ListView>
            </TabItem>

            <TabItem Header="File in invio">
                <ListView Name="sendingFiles" ItemsSource="{Binding FileToSend}">

                    <!--<ListView.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="Delete" Click="Menu_delete_click"/>
                            <MenuItem Header="Modify" Click="Menu_modify_click"/>
                        </ContextMenu>
                    </ListView.ContextMenu>-->

                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Margin="5">
                                            <Ellipse Height="54" Width="54">
                                                <Ellipse.Fill>
                                                    <ImageBrush ImageSource="{Binding Immagine}"/>
                                                </Ellipse.Fill>
                                            </Ellipse>
                                            <TextBlock Text="{Binding Name}" TextAlignment="Center" FontSize="16"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                            <!--<GridViewColumn Header="File">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding FileName}" TextAlignment="Left" FontSize="16"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>-->


                            <GridViewColumn Width="240"  Header="">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <ProgressBar Value="{Binding Path = Value}"/>
                                            <TextBlock Text="{Binding Path = Value, StringFormat={}{0:0}%}"  HorizontalAlignment="Center" VerticalAlignment="Center" />
                                        </Grid>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                            <GridViewColumn Width="140"  Header="">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="Cancel" Height="20" Width="100" Click="Cancel_Click"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>


                            <GridViewColumn Width="150"  Header="">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Image Source="{Binding Pic}" Width="32" Height="32"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                        </GridView>
                    </ListView.View>



                    <ListView.GroupStyle>
                        <GroupStyle>
                            <GroupStyle.HeaderTemplate>
                                <DataTemplate>
                                    <TextBlock FontWeight="Bold" FontSize="14" Text="{Binding Name}"/>
                                </DataTemplate>
                            </GroupStyle.HeaderTemplate>
                        </GroupStyle>
                    </ListView.GroupStyle>



                </ListView>

            </TabItem>
            <TabItem Header="Contatti online" >
                <Grid>
                    <StackPanel>
                        <TextBlock Name="sendingFile"></TextBlock>
                        <ListView x:Name="Neighbors" ItemsSource="{Binding NeighborsValues}" HorizontalAlignment="Stretch" VerticalAlignment="Top" >
                            <ListView.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <UniformGrid Columns="5" HorizontalAlignment="Stretch" />
                                </ItemsPanelTemplate>

                            </ListView.ItemsPanel>

                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Vertical" VerticalAlignment="Stretch" Margin="10">
                                        <Ellipse Height="64" Width="64" >
                                            <Ellipse.Fill>
                                                <ImageBrush  ImageSource="{Binding NeighborImage}"  Stretch="Uniform" />
                                            </Ellipse.Fill>
                                        </Ellipse>
                                        <TextBlock Text="{Binding NeighborName}" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                            <ListView.ItemContainerStyle>
                                <Style  TargetType="ListViewItem">
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                    <Setter Property="BorderBrush" Value="Red" />
                                    <Setter Property="BorderThickness" Value="0,0,0,1" />
                                </Style>
                            </ListView.ItemContainerStyle>
                        </ListView>
                        <Button Content="Invia" Click="button_send_files"></Button>
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
    <Window.Resources>

        <!--Serve per fare in modo che la colonna si adatti al contenuto-->
        <Style  TargetType="ListViewItem">
            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
            <Setter Property="BorderBrush" Value="LightGray" />
            <Setter Property="BorderThickness" Value="0,0,0,1" />
        </Style>

        <Style TargetType="GridViewColumnHeader">
            <Setter Property="FontSize" Value="16" />
        </Style>


    </Window.Resources>
</Window>